{
  "name": "commerce-cif-graphql-integration-reference",
  "version": "1.0.0",
  "description": "Reference implementation showcasing a GraphQL integration on Adobe I/O Runtime with a dummy 3rd-party commerce system",
  "author": "Adobe",
  "license": "Apache-2.0",
  "private": true,
  "hybrishost": "https://hybris.example.com/",
  "scripts": {
    "lint": "eslint -f table --ignore-path ./.eslintignore .",
    "linter:fix": "eslint --ext .js . --fix",
    "test": "npm run lint && npm run test-cov",
    "test-cov": "nyc npm run unit && npm run lcov-report",
    "lcov-report": "nyc report --reporter=lcov",
    "unit": "mocha cif/*/test/unit/*Test.js --reporter mocha-multi-reporters --reporter-options configFile=mocha-unit.json",
    "deploy": "serverless deploy"
  },
  "dependencies": {
    "dataloader": "^1.4.0",
    "graphql": "^14.5.8",
    "graphql-tools": "3.1.1",
    "node-fetch": "^2.6.0",
    "openwhisk": "^3.19.0",
    "request": "2.88.0",
    "request-promise": "4.2.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chai-shallow-deep-equal": "^1.4.6",
    "eslint": "^6.1.0",
    "eslint-plugin-header": "^3.0.0",
    "mocha": "^6.2.0",
    "mocha-junit-reporter": "^1.23.1",
    "mocha-multi-reporters": "^1.1.7",
    "mock-require": "^3.0.3",
    "nock": "^12.0.3",
    "nyc": "^15.0.0",
    "serverless": "^1.67.0",
    "serverless-openwhisk": "^0.18.4",
    "serverless-webpack": "^5.3.1",
    "sinon": "^7.5.0",
    "webpack": "^4.39.1",
    "prettier": "^1.15.3",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.1"
  },
  "nyc": {
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/resources"
    ],
    "check-coverage": true,
    "per-file": false,
    "lines": 80,
    "all": true
  }
}
