{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "loglevel": "error",
  "command": {
    "publish": {
      "npmClient": "npm",
      "allowBranch": [
        "master",
        "develop",
        "feature/*",
        "release/*"
      ]
    }
  },
  "ignoreChanges": [
    "**/test/**",
    "**/lib/**",
    "**/*.md"
  ]
}
